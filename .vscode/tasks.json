{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cppCustomBuild",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "${fileBasenameNoExtension}.out",
                "-O2",
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-D_GLIBCXX_ASSERTIONS",
                "-fsanitize=address,undefined",
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "cppCustomRun",
            "dependsOn": "cppCustomBuild",
            "type": "shell",
            "command": "./src/${fileBasenameNoExtension}.out",
            "args": [
                "<",
                "data/in.txt",
                ">",
                "data/out.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
        },
        {
            "label": "pythonCustomRun",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "src/${fileBasename}",
                "<",
                "data/in.txt",
                ">",
                "data/out.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}
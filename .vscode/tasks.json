{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cppDebugBuild",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "-Iinclude",
                "-DFFS",
                "-o",
                "${fileBasenameNoExtension}_dbg.out",
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "cppFastBuild",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-g",
                "-O2",
                "-Wall","-Wextra","-Wshadow",
                "-D_GLIBCXX_ASSERTIONS",
                "-fsanitize=address,undefined",
                "-Iinclude",
                "-DFFS",
                "-o",
                "${fileBasenameNoExtension}.out",
                "${fileBasename}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "dedicated",
                "clear": true
            },
            "group": "build"
        },
        {
            "label": "cppFastRun",
            "dependsOn": "cppFastBuild",
            "type": "shell",
            "command": "./src/${fileBasenameNoExtension}.out",
            "args": [
                "<",
                "data/in.txt",
                ">",
                "data/out.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "pythonCustomRun",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "src/${fileBasename}",
                "<",
                "data/in.txt",
                ">",
                "data/out.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}